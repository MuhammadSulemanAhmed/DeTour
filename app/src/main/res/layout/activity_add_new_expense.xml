<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backkk"
    android:orientation="vertical"
    tools:context="com.example.suleman_pc.detour.AddNewExpenseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense name"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/newExpenseName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Expense name"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter date"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="italic" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/newExpenseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:inputType="date" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:onClick="setDate"
            android:layout_margin="10dp"
            />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the given_amount "
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/newExpenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Given by"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/newExpenseGiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Expense given by" />


    <Button
        android:id="@+id/addNewExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:background="@color/colorPrimary"
        android:text="Add Expense" />
    <!--android:onClick="run"-->
</LinearLayout>
