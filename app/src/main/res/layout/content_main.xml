        <!--android:id="@+id/textView7"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
       <!--android:layout_marginLeft="210dp"-->
        <!--android:layout_marginTop="575dp"-->
        <!--android:text="Map" />-->



</RelativeLayout>
