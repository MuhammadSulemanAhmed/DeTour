<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Name:"/>
    <TextView
        android:layout_marginLeft="100dp"
        android:id="@+id/expense_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense name"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/given_amount"
        android:text="Given By:" />

    <TextView
        android:id="@+id/expense_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/expense_givenBy"
        android:layout_alignStart="@+id/expense_givenBy"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="Date" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Name:"/>

    <TextView
        android:id="@+id/given_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expense_name"
        android:layout_marginLeft="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/expense_name"
        android:layout_toRightOf="@+id/expense_name"
        android:inputType="number"
        android:text="Amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="18dp"
        android:text="Date:"
        android:id="@+id/textView12" />

    <TextView
        android:id="@+id/expense_givenBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expense_name"
        android:layout_alignStart="@+id/expense_name"
        android:layout_below="@+id/given_amount"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="Given by" />




</RelativeLayout>
